{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client", 
            "image": "p4fun/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server", 
            "image": "p4fun/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker", 
            "image": "p4fun/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx", 
            "image": "p4fun/nginx",
            "hostname": "nginx",
            "essential": true,
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}
